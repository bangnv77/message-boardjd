{{#if editAnswer}}
  <h1>Edit Answer</h1>
  <div class="">
    <form>
      <div class="form-group">
        <label for="body">Answer:</label>
        {{input value=answer.body id="edit-body"}}
      </div>
      <div class="form-group">
        <label for="author">Username:</label>
        {{input value=answer.author id="edit-author"}}
      </div>
      <button {{action 'saveChanges' answer}}>Save Changes</button>
    </form>
    <button {{action 'deleteAnswer' answer}}>Delete this Answer</button>
  </div>
{{else}}
  <button {{action 'editAnswerFormShow'}}>Edit Answer</button>
{{/if}}
